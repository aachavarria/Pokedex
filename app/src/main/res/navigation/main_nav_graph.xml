<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/trainerFragment">
    <fragment
        android:id="@+id/trainerFragment"
        android:name="com.example.pokedex.fragments.TrainerFragment"
        android:label="trainer_fragment"
        tools:layout="@layout/trainer_fragment" >
        <action
            android:id="@+id/action_trainerFragment_to_favoriteFragment"
            app:destination="@id/favoriteFragment" />
        <action
            android:id="@+id/action_trainerFragment_to_pokedexFragment"
            app:destination="@id/pokedexFragment" />
    </fragment>
    <fragment
        android:id="@+id/pokedexFragment"
        android:name="com.example.pokedex.fragments.PokedexFragment"
        android:label="pokedex_fragment"
        tools:layout="@layout/pokedex_fragment" />
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.pokedex.fragments.FavoriteFragment"
        android:label="favorite_fragment"
        tools:layout="@layout/favorite_fragment" />

</navigation>